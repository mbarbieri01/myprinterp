<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
xmlns:client="urn:import:com.sencha.gxt.widget.core.client" xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
<ui:style>
.important { font-weight: bold; }
</ui:style>
<g:HTMLPanel>
	<g:Label text="This is a label" horizontalAlignment="ALIGN_CENTER"/>
	<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" width="100%" ui:field="vPanel">
		<g:MenuBar animationEnabled="true" styleName="gwt-menubar">
			<g:MenuItem text="Gestione Macchine">
				<g:MenuBar vertical="true" animationEnabled="true">
					<g:MenuItem text="AT_MACCHINA" ui:field="at_macchina_tab"/>
					<g:MenuItem text="AT_GRUPPO" ui:field="at_gruppo_tab"/>
				</g:MenuBar>
			</g:MenuItem>
			<g:MenuItem text="New menu2">
				<g:MenuBar vertical="true" animationEnabled="true">
					<g:MenuItem text="item3"/>
					<g:MenuItem text="item4"/>
				</g:MenuBar>
			</g:MenuItem>
	</g:MenuBar>
		<g:Button styleName="{style.important}" ui:field="button" />
		<g:Button text="test Button"/>
		<client:Slider ui:field="slider1" />
    	<button:TextButton text="Set value to 40" ui:field="slider1Button" />
	</g:VerticalPanel>
	


</g:HTMLPanel>
</ui:UiBinder> 